<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.welcome.WelcomeActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/volunteerBtn"
        android:background="@drawable/keypad_bg"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:inputType="textCapSentences"
        android:onClick="openVolunteerLogin"
        android:textSize="16dp"
        android:text="Я хочу помочь" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/personBtn"
        android:background="@drawable/keypad_bg"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:inputType="textCapSentences"
        android:onClick="openRegularLogin"
        android:textSize="16dp"
        android:text="Мне нужна помощь" />

</LinearLayout>