<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    android:gravity="center"
    tools:context=".ui.questions.QuesionActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</LinearLayout>


<LinearLayout
    android:id="@+id/haveQ"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_margin="?actionBarSize"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#fff"
        android:text="Есть вопросы?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/mapintro"
        android:textColor="#fff"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:text="string/haveQ"
        android:textColor="#fff"
        android:textColorHint="#eee"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

    <LinearLayout
        android:layout_below="@+id/haveQ"
        android:id="@+id/developercontact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/gmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gmail"/>
        <ImageButton
            android:id="@+id/instagram"
            android:layout_marginStart="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/instag"/>

    </LinearLayout>


</RelativeLayout>